<Window x:Class="pjefixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pjefixer"
        mc:Ignorable="d"
        Title="pjefixer" Height="112" Width="200" ResizeMode="NoResize">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="0*"/>
    </Grid.ColumnDefinitions>
    <Button x:Name="button" Content="Aplicar" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" Width="40" Click="button_Click" Margin="0,10,0,0"/>
    <Label x:Name="label" Content="" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top"/>

  </Grid>
</Window>
